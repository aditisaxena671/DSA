//GeeksForGeeks link : https://practice.geeksforgeeks.org/problems/check-if-an-array-is-sorted0701/1

class Solution {
  public:
    bool arraySortedOrNot(int arr[], int n) {
        // code here
        int i,check=0;
        if(n==1 || n==0){
            return 1;
        }
        if(arr[0]<=arr[n-1]){
           for( i=0;i<n-1;i++){
                if(arr[i]>arr[i+1]){
                    return 0;
                }
            
         }
        return 1;
        
         
        }else
        return false;      
                  
        
    }
};
