//GeeksForGeeks Link : https://practice.geeksforgeeks.org/problems/maximum-value-in-a-bitonic-array3001/1

class Solution {
    int findMaximum(int[] arr, int n) {
        // code here
        int i=1;
        int ans=arr[0];
        while(i<n){
            if(ans<arr[i]){
                ans=arr[i];
            }
            else{
                break;
            }
            i++;
        }
        return ans;
    }
}
